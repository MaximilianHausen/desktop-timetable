{
    // TailwindCSS with Leptos
    "tailwindCSS.includeLanguages": {
        "rust": "html",
        "*.rs": "html"
    },
    "files.associations": {
        "*.rs": "rust"
    },
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": true
    },
    "css.validate": false,
    "rust-analyzer.cargo.features": [
        "ssr",
        "hydrate"
    ],
}